<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/vm_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <me.k4m1s.voicemeetercontroller.VMHardwareStrip
            android:id="@+id/Strip0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:hStripName="Strip 1"
            app:hStripID="0" />

        <me.k4m1s.voicemeetercontroller.VMHardwareStrip
            android:id="@+id/Strip1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:hStripName="Strip 2"
            app:hStripID="1"/>

        <me.k4m1s.voicemeetercontroller.VMHardwareStrip
            android:id="@+id/Strip2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:hStripName="Strip 3"
            app:hStripID="2" />

        <me.k4m1s.voicemeetercontroller.VMSoftwareStrip
            android:id="@+id/Strip3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:sStripName="Strip 4"
            app:sStripID="0" />

        <me.k4m1s.voicemeetercontroller.VMSoftwareStrip
            android:id="@+id/Strip4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:sStripName="Strip 5"
            app:sStripID="1" />

        <me.k4m1s.voicemeetercontroller.VMBus
            android:id="@+id/Bus0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:bStripName="A1"
            app:bStripID="0"/>

        <me.k4m1s.voicemeetercontroller.VMBus
            android:id="@+id/Bus1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:bStripName="A2"
            app:bStripID="1"/>

        <me.k4m1s.voicemeetercontroller.VMBus
            android:id="@+id/Bus2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:bStripName="A3"
            app:bStripID="2"/>

        <me.k4m1s.voicemeetercontroller.VMBus
            android:id="@+id/Bus3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:bStripName="B1"
            app:bStripID="3"/>

        <me.k4m1s.voicemeetercontroller.VMBus
            android:id="@+id/Bus4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:bStripName="B2"
            app:bStripID="4" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>